{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["vite/client", "vitest"],
    "baseUrl": "src",
    "paths": {
      "@api/*": ["api/*"],
      "@features/*": ["features/*"],
      "@public/*": ["../public/*"],
      "@utils/*": ["utils/*"],
      "@styles/*": ["styles/*"],
      "@constants/*": ["constants/*"],
      "@shared/*": ["shared/*"],
      "@sharedTypes/*": ["../../shared/*"]
    }
  },
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ],
  "extends": "../../tsconfig.base.json"
}
